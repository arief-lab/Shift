{
	"name": "Shift",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:marketing": "turbo -F marketing dev",
		"dev:web": "turbo -F web dev",
		"build:marketing": "turbo -F marketing build",
		"build:web": "turbo -F web build",
		"db:push": "turbo -F @Shift/db db:push",
		"db:studio": "turbo -F @Shift/db db:studio",
		"db:generate": "turbo -F @Shift/db db:generate",
		"db:migrate": "turbo -F @Shift/db db:migrate",
		"db:start": "turbo -F @Shift/db db:start",
		"db:watch": "turbo -F @Shift/db db:watch",
		"db:stop": "turbo -F @Shift/db db:stop",
		"db:down": "turbo -F @Shift/db db:down"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"tsdown": "^0.15.5",
		"@types/node": "^22.13.11"
	},
	"packageManager": "pnpm@10.20.0"
}
